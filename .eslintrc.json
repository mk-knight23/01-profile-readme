{
    "env": {
        "browser": true,
        "es2022": true
    },
    "extends": [
        "eslint:recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "no-unused-vars": "warn",
        "no-console": "warn",
        "semi": [
            "error",
            "always"
        ],
        "quotes": [
            "error",
            "single",
            {
                "avoidEscape": true
            }
        ]
    },
    "ignorePatterns": [
        "dist/",
        "node_modules/"
    ]
}